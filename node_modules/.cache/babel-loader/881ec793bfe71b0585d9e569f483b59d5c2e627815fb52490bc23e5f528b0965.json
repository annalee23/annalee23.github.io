{"ast":null,"code":"import { mapMutations, mapState } from 'vuex';\nimport moment from 'moment';\nexport default {\n  computed: {\n    ...mapState(['ordersList']),\n    ...mapGetters(['getHeaders', 'getDialog'])\n  },\n  methods: {\n    ...mapMutations(['addNewItem']),\n    formatDate(date) {\n      return moment(date).isValid() ? moment(date).format('DD.MM.YYYY HH:mm') : 'Invalid date';\n    },\n    statusClass(status) {\n      return {\n        'status-init': status === 'init',\n        'status-error': status === 'error',\n        'status-upload_docs': status === 'upload_docs',\n        'status-process': status === 'process',\n        'status-reupload_fls': status === 'reupload_fls'\n      };\n    },\n    selectOrder(orderId) {\n      this.$emit('select-order', orderId);\n    },\n    openDialog() {\n      this.dialog = true;\n    },\n    closeDialog() {\n      this.dialog = false;\n      this.$nextTick(() => {\n        this.editedItem = Object.assign({}, this.defaultItem);\n        this.editedIndex = -1;\n      });\n      //this.$refs.form.reset();\n    },\n    saveItem() {\n      if (this.$refs.form.validate()) {\n        if (!moment(this.editedItem.dadd).isValid()) {\n          this.editedItem.dadd = moment().format('YYYY-MM-DD HH:mm');\n        } else {\n          this.editedItem.dadd = moment(this.editedItem.dadd).format('YYYY-MM-DD HH:mm');\n        }\n        if (this.editedItem.id > -1) {\n          // Редактирование существующей заявки\n          Object.assign(this.ordersList[this.editedIndex], this.editedItem);\n        } else {\n          // Создание новой заявки\n          this.addNewItem(this.editedItem);\n        }\n        this.closeDialog();\n      }\n    },\n    editItem(item) {\n      this.editedIndex = this.ordersList.indexOf(item);\n      this.editedItem = Object.assign({}, item);\n      this.dialogTitle = \"Редактировать заявку\";\n      this.dialog = true;\n    },\n    deleteItem(item) {\n      this.editedIndex = this.ordersList.indexOf(item);\n      this.editedItem = Object.assign({}, item);\n      this.dialogDelete = true;\n    },\n    deleteItemConfirm() {\n      this.ordersList.splice(this.editedIndex, 1);\n      this.closeDelete();\n    },\n    close() {\n      this.dialog = false;\n      this.$nextTick(() => {\n        this.editedItem = Object.assign({}, this.defaultItem);\n        this.editedIndex = -1;\n      });\n    },\n    closeDelete() {\n      this.dialogDelete = false;\n      this.$nextTick(() => {\n        this.editedItem = Object.assign({}, this.defaultItem);\n        this.editedIndex = -1;\n      });\n    }\n  },\n  mounted() {\n    this.$store.dispatch('fetchOrdersList');\n  }\n};","map":{"version":3,"names":["mapMutations","mapState","moment","computed","mapGetters","methods","formatDate","date","isValid","format","statusClass","status","selectOrder","orderId","$emit","openDialog","dialog","closeDialog","$nextTick","editedItem","Object","assign","defaultItem","editedIndex","saveItem","$refs","form","validate","dadd","id","ordersList","addNewItem","editItem","item","indexOf","dialogTitle","deleteItem","dialogDelete","deleteItemConfirm","splice","closeDelete","close","mounted","$store","dispatch"],"sources":["src/components/MyApplications.vue"],"sourcesContent":["<template>\n  <div class=\"mx-1\">\n    <v-data-table :headers=\"getHeaders\" :items=\"ordersList\" class=\"elevation-1\">\n      <template v-slot:top>\n        <v-toolbar flat>\n          <h2>Список заявок</h2>\n          <v-spacer></v-spacer>\n          <v-btn class=\"my-4\" color=\"primary\" @click=\"openDialog()\">Добавить заявку</v-btn>\n          <v-dialog v-model=\"dialogDelete\" max-width=\"500px\">\n            <v-card>\n              <v-card-title class=\"text-h5\">Хотите удалить заявку?</v-card-title>\n              <v-card-actions>\n                <v-spacer></v-spacer>\n                <v-btn color=\"blue darken-1\" text @click=\"closeDelete\">Отмена</v-btn>\n                <v-btn color=\"blue darken-1\" text @click=\"deleteItemConfirm\">Да</v-btn>\n                <v-spacer></v-spacer>\n              </v-card-actions>\n            </v-card>\n          </v-dialog>\n        </v-toolbar>\n      </template>\n\n      <template #[`item.stg`]=\"{ item }\">\n        <span>{{ Array.isArray(item.stg) ? item.stg.join(', ') : item.stg }}</span>\n      </template>\n      <template #[`item.dadd`]=\"{ item }\">\n        <span>{{ formatDate(item.dadd) }}</span>\n      </template>\n      <template #[`item.state`]=\"{ item }\">\n        <span :class=\"statusClass(item.state)\">{{ item.state }}</span>\n      </template>\n      <template #[`item.num`]=\"{ item }\">\n        <div @click=\"selectOrder(item.id)\" style=\"cursor: pointer;\">\n          {{ item.num }}\n        </div>\n      </template>\n\n      <template #[`item.actions`]=\"{ item }\">\n        <v-icon small class=\"mr-2\" @click=\"editItem(item)\">\n          mdi-pencil\n        </v-icon>\n        <v-icon small @click=\"deleteItem(item)\">\n          mdi-delete\n        </v-icon>\n      </template>\n    </v-data-table>\n\n    <v-dialog v-model=\"dialog\" max-width=\"600px\">\n      <v-card>\n        <v-card-title>{{ dialogTitle }}</v-card-title>\n        <v-card-text>\n          <v-form ref=\"form\">\n            <v-text-field v-model=\"editedItem.num\" label=\"№ Заявки\"></v-text-field>\n            <v-text-field v-model=\"editedItem.stg\" label=\"Продукт\"></v-text-field>\n            <v-row>\n              <v-col cols=\"12\" sm=\"6\" md=\"4\">\n                <v-menu v-model=\"menu2\" :close-on-content-click=\"false\" :nudge-right=\"40\" transition=\"scale-transition\"\n                  offset-y min-width=\"auto\">\n                  <template v-slot:activator=\"{ on, attrs }\">\n                    <v-text-field v-model=\"editedItem.dadd\" label=\"Дата\" prepend-icon=\"mdi-calendar\" readonly\n                      v-bind=\"attrs\" v-on=\"on\"></v-text-field>\n                  </template>\n                  <v-date-picker v-model=\"editedItem.dadd\" @input=\"menu2 = false\"></v-date-picker>\n                </v-menu>\n              </v-col>\n            </v-row>\n            <v-text-field v-model=\"editedItem.client_name\" label=\"Клиент\"></v-text-field>\n            <v-row>\n              <v-col class=\"d-flex\" cols=\"12\" sm=\"6\">\n                <v-select v-model=\"editedItem.state\" :items=\"statusOptions\" label=\"Статус\"></v-select>\n              </v-col>\n            </v-row>\n            <v-text-field v-model=\"editedItem.person_phone\" label=\"Телефон\"></v-text-field>\n          </v-form>\n        </v-card-text>\n        <v-card-actions>\n          <v-spacer></v-spacer>\n          <v-btn color=\"blue darken-1\" text @click=\"closeDialog\">Отмена</v-btn>\n          <v-btn color=\"blue darken-1\" text @click=\"saveItem\">Сохранить</v-btn>\n        </v-card-actions>\n      </v-card>\n    </v-dialog>\n  </div>\n</template>\n\n\n<script>\nimport { mapMutations, mapState } from 'vuex';\nimport moment from 'moment';\n\n\nexport default {\n  computed: {\n    ...mapState(['ordersList']),\n    ...mapGetters(['getHeaders', 'getDialog']),\n  },\n  methods: {\n    ...mapMutations(['addNewItem']),\n    formatDate(date) {\n      return moment(date).isValid() ? moment(date).format('DD.MM.YYYY HH:mm') : 'Invalid date';\n    },\n    statusClass(status) {\n      return {\n        'status-init': status === 'init',\n        'status-error': status === 'error',\n        'status-upload_docs': status === 'upload_docs',\n        'status-process': status === 'process',\n        'status-reupload_fls': status === 'reupload_fls',\n      };\n    },\n    selectOrder(orderId) {\n      this.$emit('select-order', orderId);\n\n    },\n    openDialog() {\n      this.dialog = true;\n    },\n    closeDialog() {\n      this.dialog = false;\n      this.$nextTick(() => {\n        this.editedItem = Object.assign({}, this.defaultItem);\n        this.editedIndex = -1;\n      });\n      //this.$refs.form.reset();\n    },\n    saveItem() {\n      if (this.$refs.form.validate()) {\n        if (!moment(this.editedItem.dadd).isValid()) {\n          this.editedItem.dadd = moment().format('YYYY-MM-DD HH:mm');\n        } else {\n          this.editedItem.dadd = moment(this.editedItem.dadd).format('YYYY-MM-DD HH:mm');\n        }\n        if (this.editedItem.id > -1) {\n          // Редактирование существующей заявки\n          Object.assign(this.ordersList[this.editedIndex], this.editedItem);\n        } else {\n          // Создание новой заявки\n          this.addNewItem(this.editedItem);\n        }\n        this.closeDialog();\n      }\n    },\n    editItem(item) {\n      this.editedIndex = this.ordersList.indexOf(item);\n      this.editedItem = Object.assign({}, item);\n      this.dialogTitle = \"Редактировать заявку\";\n      this.dialog = true;\n    },\n\n    deleteItem(item) {\n      this.editedIndex = this.ordersList.indexOf(item);\n      this.editedItem = Object.assign({}, item);\n      this.dialogDelete = true;\n    },\n\n    deleteItemConfirm() {\n      this.ordersList.splice(this.editedIndex, 1);\n      this.closeDelete();\n    },\n    close() {\n      this.dialog = false\n      this.$nextTick(() => {\n        this.editedItem = Object.assign({}, this.defaultItem)\n        this.editedIndex = -1\n      });\n    },\n    closeDelete() {\n      this.dialogDelete = false;\n      this.$nextTick(() => {\n        this.editedItem = Object.assign({}, this.defaultItem);\n        this.editedIndex = -1;\n      })\n    },\n  },\n  mounted() {\n    this.$store.dispatch('fetchOrdersList');\n  }\n};\n\n</script>\n\n<style scoped>\nh2 {\n  margin-bottom: 20px;\n  text-align: center;\n}\n\n.v-data-footer {\n  display: flex;\n  justify-content: flex-end;\n}\n\n.v-data-footer__pagination,\n.v-data-footer__select {\n  margin-left: auto;\n}\n\n.status-init {\n  color: #ff6f00;\n  /* Ярко-оранжевый */\n  font-weight: bold;\n  padding: 5px;\n}\n\n.status-error {\n  color: #d32f2f;\n  /* Ярко-красный */\n  font-weight: bold;\n  padding: 5px;\n}\n\n.status-upload_docs {\n  color: #0288d1;\n  /* Ярко-голубой */\n  font-weight: bold;\n  padding: 5px;\n}\n\n.status-process {\n  color: #388e3c;\n  /* Ярко-зеленый */\n  font-weight: bold;\n  padding: 5px;\n}\n\n.status-reupload_fls {\n  color: #7b1fa2;\n  /* Ярко-фиолетовый */\n  font-weight: bold;\n  padding: 5px;\n}\n\ntr:hover {\n  background-color: #f5f5f5;\n  /* Светло-серый */\n}\n</style>\n"],"mappings":"AAuFA,SAAAA,YAAA,EAAAC,QAAA;AACA,OAAAC,MAAA;AAGA;EACAC,QAAA;IACA,GAAAF,QAAA;IACA,GAAAG,UAAA;EACA;EACAC,OAAA;IACA,GAAAL,YAAA;IACAM,WAAAC,IAAA;MACA,OAAAL,MAAA,CAAAK,IAAA,EAAAC,OAAA,KAAAN,MAAA,CAAAK,IAAA,EAAAE,MAAA;IACA;IACAC,YAAAC,MAAA;MACA;QACA,eAAAA,MAAA;QACA,gBAAAA,MAAA;QACA,sBAAAA,MAAA;QACA,kBAAAA,MAAA;QACA,uBAAAA,MAAA;MACA;IACA;IACAC,YAAAC,OAAA;MACA,KAAAC,KAAA,iBAAAD,OAAA;IAEA;IACAE,WAAA;MACA,KAAAC,MAAA;IACA;IACAC,YAAA;MACA,KAAAD,MAAA;MACA,KAAAE,SAAA;QACA,KAAAC,UAAA,GAAAC,MAAA,CAAAC,MAAA,UAAAC,WAAA;QACA,KAAAC,WAAA;MACA;MACA;IACA;IACAC,SAAA;MACA,SAAAC,KAAA,CAAAC,IAAA,CAAAC,QAAA;QACA,KAAAzB,MAAA,MAAAiB,UAAA,CAAAS,IAAA,EAAApB,OAAA;UACA,KAAAW,UAAA,CAAAS,IAAA,GAAA1B,MAAA,GAAAO,MAAA;QACA;UACA,KAAAU,UAAA,CAAAS,IAAA,GAAA1B,MAAA,MAAAiB,UAAA,CAAAS,IAAA,EAAAnB,MAAA;QACA;QACA,SAAAU,UAAA,CAAAU,EAAA;UACA;UACAT,MAAA,CAAAC,MAAA,MAAAS,UAAA,MAAAP,WAAA,QAAAJ,UAAA;QACA;UACA;UACA,KAAAY,UAAA,MAAAZ,UAAA;QACA;QACA,KAAAF,WAAA;MACA;IACA;IACAe,SAAAC,IAAA;MACA,KAAAV,WAAA,QAAAO,UAAA,CAAAI,OAAA,CAAAD,IAAA;MACA,KAAAd,UAAA,GAAAC,MAAA,CAAAC,MAAA,KAAAY,IAAA;MACA,KAAAE,WAAA;MACA,KAAAnB,MAAA;IACA;IAEAoB,WAAAH,IAAA;MACA,KAAAV,WAAA,QAAAO,UAAA,CAAAI,OAAA,CAAAD,IAAA;MACA,KAAAd,UAAA,GAAAC,MAAA,CAAAC,MAAA,KAAAY,IAAA;MACA,KAAAI,YAAA;IACA;IAEAC,kBAAA;MACA,KAAAR,UAAA,CAAAS,MAAA,MAAAhB,WAAA;MACA,KAAAiB,WAAA;IACA;IACAC,MAAA;MACA,KAAAzB,MAAA;MACA,KAAAE,SAAA;QACA,KAAAC,UAAA,GAAAC,MAAA,CAAAC,MAAA,UAAAC,WAAA;QACA,KAAAC,WAAA;MACA;IACA;IACAiB,YAAA;MACA,KAAAH,YAAA;MACA,KAAAnB,SAAA;QACA,KAAAC,UAAA,GAAAC,MAAA,CAAAC,MAAA,UAAAC,WAAA;QACA,KAAAC,WAAA;MACA;IACA;EACA